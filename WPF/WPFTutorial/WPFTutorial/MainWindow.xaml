<Window x:Class="WPFTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="525"
        Height="350">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Button x:Name="XamlTutorialButton"
            Grid.Row="0"
            Grid.Column="0"
            MinWidth="50"
            Margin="5" Click="XamlTutorialButton_OnClick">
      <Button.Content>
        <WrapPanel>
          <TextBlock Margin="1"
                     Foreground="Blue"
                     Text="XAML Tutorial" />
        </WrapPanel>
      </Button.Content>
    </Button>
  </Grid>
</Window>
